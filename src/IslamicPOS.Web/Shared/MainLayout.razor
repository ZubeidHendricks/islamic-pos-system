@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">Islamic POS System</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Print" Color="Color.Inherit" OnClick="OpenPrinterSettings" />
        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<PrinterSettings @bind-IsVisible="_showPrinterSettings" />

@code {
    private bool _drawerOpen = true;
    private bool _showPrinterSettings;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void OpenPrinterSettings()
    {
        _showPrinterSettings = true;
    }
}